@model LaboratorioMVC.Models.ModeloIntermedio
@{
    ViewBag.Title = "Lista de clientes ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Cedula
        </th>
        <th>
            Nombre
        </th>
        <th>
            Apellido 1
        </th>
        <th>
            Apellido 2
        </th>
        <th>
            Telefonos
        </th>
        <th>
            Cuentas
        </th>
    </tr>
    @for (int i = 0; i < Model.listaPersonas.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.listaPersonas.ElementAt(i).cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.listaPersonas.ElementAt(i).nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.listaPersonas.ElementAt(i).apellido1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.listaPersonas.ElementAt(i).apellido2)
            </td>
            <td>
                @for (int j = 0; j < Model.listaTelefonos.Count; j++)
                {
                    if (Model.listaPersonas.ElementAt(i).cedula.Equals(Model.listaTelefonos.ElementAt(j).cedula))
                    {
                        @Html.DisplayFor(modelItem =>Model.listaTelefonos.ElementAt(j).telefono1)
                        @Html.Raw(" ")
                    }
                }
            </td>
            <td>
                @for (int j = 0; j < Model.listaCuenta.Count; j++)
                {
                    if (Model.listaPersonas.ElementAt(i).cedula.Equals(Model.listaCuenta.ElementAt(j).cedula))
                    {
                        @Html.DisplayFor(modelItem => Model.listaCuenta.ElementAt(j).numero )
                        @Html.Raw(" ")
                    }
                }
            </td>
            <td></td>

            <td>
                @Html.ActionLink("Edit", "Edit", new
                    {
                        id = Model.listaPersonas.ElementAt(i).cedula
                    }) |
                @Html.ActionLink("Details", "Details", new
                    {
                        id = Model.listaPersonas.ElementAt(i).cedula
                    }) |
                @Html.ActionLink("Delete", "Delete", new
                    {
                        id = Model.listaPersonas.ElementAt(i).cedula
                    })
            </td>
        </tr>
    }
</table>